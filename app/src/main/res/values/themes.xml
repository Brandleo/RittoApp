<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RittoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores para el tema claro -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOutline">@color/outline_light</item>
        <item name="colorPrimary">@color/teal_700</item>
    </style>

    <style name="Theme.RittoApp.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialogo_redondo</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>