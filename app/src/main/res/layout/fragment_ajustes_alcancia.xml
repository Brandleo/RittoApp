<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cambiar_avatar_de_alcanc_a"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/imgIconoAlcancia"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/icono_de_alcanc_a" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnAnteriorIcono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flecha_a_la_izquierda" />

            <Button
                android:id="@+id/btnSiguienteIcono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flecha_a_la_derecha" />
        </LinearLayout>

        <EditText
            android:id="@+id/inputNuevoNombreAlcancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/cambiar_nombre_de_alcanc_a"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnGuardarCambiosAlcancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guardar_cambios"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnVaciarAlcancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vaciar_alcanc_a"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btnBorrarAlcancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/borrar_alcanc_a" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
